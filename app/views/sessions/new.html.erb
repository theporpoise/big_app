<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_tag sessions_path do %>
			<div>
				<%= label_tag :email %>
				<%= text_field_tag :email, params[:email] %>
			</div>

			<div>
				<%= label_tag :password %>
				<%= password_field_tag :password %>
			</div>

			<div>
				<%= submit_tag "Sign in" %>
			</div>
		<% end %>

		<p>New user?  <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>

